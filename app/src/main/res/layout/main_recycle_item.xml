<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cardview_margin"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="3dp">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="100dp">

        <ImageView
            android:id="@+id/news_iv"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"/>


        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/md_grey_900"
            android:maxLines="3"
            android:layout_alignTop="@+id/news_iv"
            android:layout_toEndOf="@+id/news_iv"/>
        <TextView
            android:id="@+id/news_tv"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/icon_like"
            android:layout_alignTop="@+id/msgnum_tv"
            android:layout_toStartOf="@+id/msgnum_tv"/>

        <TextView
            android:id="@+id/msgnum_tv"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/icon_comments1"
            android:layout_alignBottom="@+id/news_iv"
            android:layout_alignParentEnd="true"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>